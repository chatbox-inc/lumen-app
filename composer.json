{
    "name": "mkkn/lumen2",
    "authors": [
        {
            "name": "mikakane",
            "email": "mikakane2@gmail.com"
        }
    ],
    "extra": {
        "installer-paths": {
            "backend/{$name}": ["chatbox-inc/lumen-providers"]
        }
    },
    "autoload":{
        "psr-4":{
            "Chatbox\\Message\\":"./src/"
        }
    },
    "autoload-dev":{
        "psr-4":{
            "Chatbox\\RestApp\\":"./backend/restapp/src/"
        },
        "classmap":["./backend/app/database/"]

    },
    "scripts":{
        "post-update-cmd": [],
        "post-package-install": [],
        "post-install-cmd": [],
        "post-autoload-dump": [],
        "post-create-project-cmd": [
            "cp .env.example .env"
        ]
    },
    "require": {
        "laravel/lumen": "^5.2",
        "chatbox-inc/lumen-providers": "dev-master",
        "barryvdh/laravel-debugbar": "^2.2"
    },
    "require-dev": {
        "peridot-php/peridot": "^1.18",
        "chatbox-inc/peridot-lumen-plugin": "^1.0"
    }
}
